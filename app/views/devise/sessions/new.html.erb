<div class="container credentials-page">

  <div class="row">

    <div class="col-md-8 col-md-offset-2">

      <div class="panel panel-default" style="border: none; border-radius: 0px; padding-bottom: 30px; border-bottom-left-radius: 4px; border-bottom-right-radius: 4px;">

        <div class="panel-heading" style="background-image: url(https://d33jl3tgfli0fm.cloudfront.net/helix/images/games/league-of-legends/background.jpg); padding-top: 50px; padding-bottom: 20px;">
          <h3 class="panel-title"></h3>
        </div>
        <div class="panel-body" style="padding-left: 60px; padding-right: 60px;">

          <h3 class="lead text-center" style="color: black; font-size: 34px;">Votre compte</h3>



          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <fieldset>
                <div class="form-group">
                  <label for="">Email</label>
                  <%= f.email_field :email, autofocus: true, :class => "form-control", :placeholder => 'Email' %>
                </div>

                <div class="form-group">
                  <label for="">Mot de passe</label>
                  <%= f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => 'Mot de passe' %>
                </div>
                <input class="btn btn-login" type="submit" value="Se connecter">

                <p class="help-block">Pas de compte encore? 
                  <a href="/users/sign_up">Enregistrer</a>.</p>
              </fieldset>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" charset="utf-8">
  <% if cookies[:set_lang_essif] == 'ar' %>
    $('form label').css('float', 'right');
    $('form input[type="email"]').css('text-align','right');
    $('form input[type="password"]').css('text-align','right');
  <% end %>

</script>